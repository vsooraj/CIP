@model CIP.HIS.ViewModels.HomeViewModel

@{
    Layout = "_Layout";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Health Information System</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div style="width:200px;background-color:#E51400;border:1px solid #E51400;border-radius:4px;padding:10px; margin:10px 5px">
                <div style="padding-right:10px;padding-left:10px">
                    <a href="/PatientRegistration/Create" style="text-decoration:none" target="_blank">
                        <span style="font-size:12px;font-family:Arial;font-weight:bold;color:#fff;white-space:nowrap;display:block; text-align:center">
                            Patient Registration
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Scheduled- Patients
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>GivenName</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Image URL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model.Patients)
                            {
                                <tr class="odd gradeX">
                                    <td>@patient.Name</td>
                                    <td>@patient.GivenName</td>
                                    <td>@patient.Phone</td>
                                    <td>@patient.Email</td>
                                    <td>@patient.ImageThumbnailUrl</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>

        </div>
    </div>
</div>